comment3_en = "   \"Huh? How?\""
comment3_jp = "   「ええ？　どういうの？」"
comment2_en = "      \"Merry, did you know that the Higan ceremonies in Tokyo has some strange manners and customs?\""
comment2_jp = "      「メリー、\n      東京のお彼岸には変わった風習があるのよ。知ってた？」"

[05]
name_jp = "青木ヶ原の伝説"
name_en = "Legend of Aokigahara"
comment11_en = "With that mindset, they never announced it officially."
